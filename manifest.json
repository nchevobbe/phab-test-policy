{
  "description": "Adding Test Policy UI to Phabricator",
  "manifest_version": 2,
  "name": "phab-test-policy",
  "version": "1.1",
  "homepage_url": "https://github.com/nchevobbe/phab-test-policy",
  "icons": {},
  "permissions": [
    "tabs",
    "webRequest",
    "https://phabricator.services.mozilla.com/D*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://phabricator.services.mozilla.com/D*"
      ],
      "js": [
        "test-policy.js"
      ]
    }
  ],
  "applications": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }
}